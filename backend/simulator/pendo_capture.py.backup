        "dashboard_explorer_path": int(total_users * 0.35),   # 35%
        "drop_off_path": int(total_users * 0.15)              # 15%
    }
    
    async with PendoReplay() as replay:
        await replay.bulk_replay(workflow_name, path_distributions, days_back=6) 